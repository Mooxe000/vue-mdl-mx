.docs-layout-header
  display flex !important
  flex-shrink 0
  align-items flex-start

  height 560px
  max-height 50%
  padding 40px

  background-size auto
  background-repeat no-repeat
  background-position center center

  box-shadow none !important

  position relative

  .mdl-layout__header-row
    padding 0px
    align-items flex-start
    height auto

  .docs-navigation__container

    overflow hidden
    position absolute
    height 64px
    width 100%
    bottom 0
    left 0

    .docs-navigation

      box-shadow none !important
      border 0 !important
      padding 0 16px
      width 100%
      height 85px
      flex-shrink 0
      padding-left 24px
      overflow-x auto
      overflow-y hidden
      user-select none
      margin-bottom -16px

      .mdl-navigation__link
        display flex
        flex-shrink 0
        user-select inherit
        height 64px
        cursor pointer

        &, section.download

          font-weight 500
          font-size 13px
          text-transform uppercase
          line-height 64px
          padding 0 16px
          color white
          box-sizing border-box
          border-bottom 3px solid transparent

      .mdl-navigation__link--icon.github,
      .mdl-navigation__link--icon.download

        text-transform none

        & > span,
        & > .material-icons
          line-height 64px
          margin-right 8px
          line-height inherit

        button.mdl-button
          right 0

          i.material-icons
            color black
            opacity 0.54

      .mdl-navigation__link

        &:not(.download),
        &.download > span
          opacity 0.65

        &.download > button
          opacity 0.87

        &:hover,
        &.download:hover > span,
        &.download:hover > button
          background-color inherit
          opacity 1 !important

        &:not(.mdl-navigation__link--icon):hover
          border-bottom-color #18FFFF

      .spacer
        flex-grow 1

  .scrollindicator

    display none
    position absolute
    top 0
    text-align center

    margin-right 0

    height 64px
    width 48px
    line-height 64px

    cursor pointer
    user-select none


    &.disabled
      opacity 0.12
      cursor default

    &.scrollindicator--left
      left 0

    &.scrollindicator--right
      right 0

  &.about

    background-color #37474f
    background url('../../assets/logo.svg'), url('../../assets/header.jpg')
    background-size auto 118px, cover
    background-repeat no-repeat no-repeat
    background-position center center, center center

    .mdl-layout__header-row

      .docs-layout-title
        font-weight 500
        text-transform uppercase
        line-height 1.5em
        font-size 1rem

        // not .about
        // display: none;

        a
          font-weight inherit
          color inherit
          text-decoration none

    .docs-navigation__container

      .docs-navigation

        .about

          opacity 1
          border-bottom-color #18FFFF

        .download > .material-icons
          display none

  &:not(.about)

    // background-repeat no-repeat
    // background-position center center

    .mdl-layout__header-row

      .docs-layout-title

        display: none
