.docs-layout

  ul
    list-style-type none

  li
    position relative

  .docs-text-styling a
    text-decoration none

  main.docs-layout-content

    overflow visible

    // #content.content

    .subpageheader
      margin-top 60px
      margin-bottom 40px
      display flex
      color rgba(0, 0, 0, .54)
      align-items center
      flex-shrink 0
      text-transform uppercase
      font-size 16px
      font-weight 500

    section.docs-text-styling.download
      display -webkit-flex
      display -ms-flexbox
      display flex
      -webkit-justify-content center
      -ms-flex-pack center
      justify-content center

      width 100%
      height 6rem
      display flex
      justify-content center
      align-items center

      font-weight 500
      font-size 13px
      text-transform uppercase
      line-height 64px
      padding 0 16px
      color white
      box-sizing border-box
      border-bottom 3px solid transparent

      a
        font-weight 500
        text-transform uppercase
