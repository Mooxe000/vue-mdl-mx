@import '~material-design-lite/material.css'

html > body
  font-family 'Roboto', 'Helvetica', 'Arial', sans-serif !important
  background-color #FAFAFA

.docs-text-styling

  ol
    li
      font-family 'Roboto', 'Helvetica', 'Arial', sans-serif
  h1
    color #c2185b
    font-size 2.5em
    margin .67em 0
  h2
    padding-top 48px
    font-size 24px
    font-weight 400
    line-height 32px
    margin-bottom 30px
    color #c2185b
  a
    text-decoration none

  h1, h2, h3, h4
    font-size 16px
    color rgba(0, 0, 0, 0.54)
    font-weight 500
    text-transform uppercase

  dl
    width 100%
    display flex
    flex-direction row
    justify-content center
    align-items stretch

    dt

      text-align right
      vertical-align top
      display inline-table
      margin-right 24px
      line-height 2em

    dd

      text-align left
      line-height 2em
      font-size 13px
      vertical-align top
      width 700px
      margin 0
      margin-left 24px

